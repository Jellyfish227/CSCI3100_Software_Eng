% Release Notes Style (chapterless)
\ProvidesPackage{srs}[2024/02/08 v1.0 SRS document style]

% Required packages
\RequirePackage{listings}
\RequirePackage{underscore}
\RequirePackage{tabularx}
\RequirePackage{enumitem}
\RequirePackage{booktabs}
\RequirePackage{mathptmx}
\RequirePackage[T1]{fontenc}
\RequirePackage[bookmarks=true]{hyperref}
\RequirePackage[utf8]{inputenc}
\RequirePackage[english]{babel}
\RequirePackage{scrlayer-scrpage}
\RequirePackage{xcolor}
\RequirePackage[left=2cm,right=2cm,top=2.5cm,bottom=1.5cm,footskip=1cm]{geometry}

% Setup headers and footers
\automark{section}

\KOMAoptions{
    headheight=1cm,
    footheight=1cm
}

\ihead{Kaiju Academy Release Notes}
\chead{}
\ohead{\headmark}
\ifoot{}
\cfoot{}
\ofoot{Page \pagemark}
\setkomafont{pagehead}{\normalfont}
\setkomafont{headsepline}{\color{black}\rule{\textwidth}{1pt}}
\setkomafont{footsepline}{\color{black}\rule{\textwidth}{1pt}}

% Section title fonts
\setkomafont{section}{\normalfont\Large\bfseries}
\setkomafont{subsection}{\normalfont\large\bfseries}
\setkomafont{subsubsection}{\normalfont\normalsize\bfseries}
\setkomafont{paragraph}{\normalfont\normalsize\bfseries}
\setkomafont{subparagraph}{\normalfont\normalsize\bfseries}

% Table of contents formatting
\addtokomafont{disposition}{\rmfamily}
\setkomafont{descriptionlabel}{\normalfont\bfseries}
\setkomafont{dictum}{\normalfont\small}
\setkomafont{captionlabel}{\normalfont\bfseries}
\setkomafont{caption}{\normalfont\small}

% Define revision history item environment
\newenvironment{revisionitem}[1][]{%
    \begin{minipage}[t]{\linewidth}%
        #1
        \begin{itemize}[
            itemsep=0pt,
            parsep=0pt,
            topsep=0pt,
            leftmargin=*,
            labelsep=0em,
            label=\textendash
        ]%
}{%
        \end{itemize}%
    \end{minipage}%
}

% Default hyperref setup
\hypersetup{
    colorlinks=true,
    linkcolor=black,
    citecolor=black,
    filecolor=black,
    urlcolor=black,
    linktoc=all
}

% Remove paragraph indentation globally
\setlength{\parindent}{0pt}